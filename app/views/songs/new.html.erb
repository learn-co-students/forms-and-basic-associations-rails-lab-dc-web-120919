<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

<div>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
</div>

<div>  
  <%= f.label "Genre" %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: true) %>
</div>

<div>
  <%= f.fields_for :notes, @song.notes do |note_field| %>
    <%= note_field.label "Notes" %>
    <%= note_field.text_area :content %>
  <% end %>
</div>

  <%= f.submit %>

<% end %>
  
 