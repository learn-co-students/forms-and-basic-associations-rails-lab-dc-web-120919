<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />


   <%= f.label :artist_name, "Artist Name" %>
  <%= f.text_field :artist_name %>

 
 <%= f.label :genre_id%>
 <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: true) %>

  <%= f.fields_for :notes  do |note| %>
    <%= note.label :note %>
    <%= note.text_area :content %>
   <% end %>
  
<%= f.submit %>
<% end %>


